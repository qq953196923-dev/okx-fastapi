{
  "openapi": "3.1.0",
  "info": { "title": "okx-fastapi", "version": "1.1.3" },
  "servers": [{ "url": "https://okx-fastapi.onrender.com" }],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "operationId": "health",
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/ticker": {
      "get": {
        "summary": "Get single ticker",
        "operationId": "getTicker",
        "parameters": [
          { "name": "inst_id", "in": "query", "required": true, "schema": { "type": "string" } },
          { "name": "api_key", "in": "query", "required": false, "schema": { "type": "string" }, "description": "兼容：若 Header 未注入，可在此填 API Key" }
        ],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/tickers": {
      "get": {
        "summary": "Get tickers by type",
        "operationId": "getTickers",
        "parameters": [
          { "name": "inst_type", "in": "query", "required": false, "schema": { "type": "string", "default": "SPOT" } },
          { "name": "api_key", "in": "query", "required": false, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/candles": {
      "get": {
        "summary": "Get candles",
        "operationId": "getCandles",
        "parameters": [
          { "name": "inst_id", "in": "query", "required": true, "schema": { "type": "string" } },
          { "name": "bar", "in": "query", "required": true, "schema": { "type": "string", "enum": ["1D","4H","1H","15m","5m"] } },
          { "name": "limit", "in": "query", "required": false, "schema": { "type": "integer" } },
          { "name": "api_key", "in": "query", "required": false, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/scan/start": {
      "post": {
        "summary": "Start scanning",
        "operationId": "scanStart",
        "parameters": [
          { "name": "api_key", "in": "query", "required": false, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ScanStartBody" } } }
        },
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/scan/stop": {
      "post": {
        "summary": "Stop scanning",
        "operationId": "scanStop",
        "parameters": [
          { "name": "api_key", "in": "query", "required": false, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/scan/status": {
      "get": {
        "summary": "Scan status",
        "operationId": "scanStatus",
        "parameters": [
          { "name": "api_key", "in": "query", "required": false, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/files/list": {
      "get": {
        "summary": "List generated files",
        "operationId": "filesList",
        "parameters": [
          { "name": "api_key", "in": "query", "required": false, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/files/download": {
      "get": {
        "summary": "Download a file",
        "operationId": "filesDownload",
        "parameters": [
          { "name": "path", "in": "query", "required": true, "schema": { "type": "string" } },
          { "name": "api_key", "in": "query", "required": false, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/debug/echo": {
      "get": {
        "summary": "Echo headers (debug only, no auth required)",
        "operationId": "debugEcho",
        "responses": { "200": { "description": "OK" } }
      }
    }
  },
  "components": {
    "schemas": {
      "ScanStartBody": {
        "type": "object",
        "properties": {
          "symbols": { "type": "array", "items": { "type": "string" } },
          "bars": { "type": "object", "additionalProperties": { "type": "integer" } },
          "batch": { "type": "integer" },
          "interval_sec": { "type": "integer" }
        },
        "required": ["symbols", "bars"]
      }
    },
    "securitySchemes": {
      "apiKey": { "type": "apiKey", "in": "header", "name": "x-api-key" }
    }
  },
  "security": [{ "apiKey": [] }]
}
